<main class="form-signin w-100 mx-auto">
  <form action="/" method="POST">
    <h1 class="h3 mb-3 fw-normal">Sign up for our Alumnii Association</h1>

    <div class="form-floating">
      <input type="text" name="name" class="form-control" placeholder="Your First Name" autofocus required>
      <label for="floatingInput">First name</label>
    </div>
    <div class="form-floating">
      <input type="text" name="lastName" class="form-control" placeholder="Your Last Name" autocomplete="off" required>
      <label for="floatingPassword">Last name</label>
    </div>
    <br>
    <div class="form-floating">
      <input type="email" name="mail" class="form-control" placeholder="example@email.com" autocomplete="off" required>
      <label for="floatingPassword">Your email</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off" required>
      <label for="exampleInputPassword1">Password</label>
    </div>
    <br>
    <button class="w-100 btn btn-lg btn-secondary" type="submit">Register</button>
    <hr>
    <!-- it starts Here -->
    <p>or Sign up with</p>
    <div class="socials">
      <div class="col">
        <a href="#" class="google btn">
          <img class = "icons" src="icons/search.png" alt="">
          <!-- <i class="fab fa-google fa-3x"></i> -->
        </a>
        <a href="#" class="fb btn">
          <img class = "icons" src="icons/facebook.png" alt="">
          <!-- <i class="fab fa-facebook fa-3x"></i> -->
        </a>
        <a href="#" class="twitter btn">
          <img class = "icons" src="icons/twitter.png" alt="">
          <!-- <i class="fab fa-twitter fa-3x"></i> -->
        </a>
      </div>
    </div>
  </form>
</main>
